@model IEnumerable<DapperMVC.Data.Models.Domain.Person>

<h3>Lista de Personas</h3>

<div class="my-2">
	<a asp-controller="Person" asp-action="Add" class="btn btn-primary">Agregar Nueva Persona</a>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Email</th>
				<th>Direccion</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var person in Model)
			{
				<tr>
					<td>@person.Name</td>
					<td>@person.Email</td>
					<td>@person.Address</td>
					<td>
						<a asp-controller="Person" asp-action="Edit" asp-route-id="@person.Id" class="btn btn-sm btn-warning">Editar</a>
						<a href="/Person/Delete?id=@person.Id" 
						onclick="return window.confirm('Esta seguro que desea eliminar este registro?')" class="btn btn-sm btn-danger">Eliminar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>