@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-4">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear nueva Categoria</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th style="color:white">Id</th>
                <th style="color:white">Nombre</th>
                <th style="color:white">Orden</th>
                <th style="color:aqua">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/categoria.js"></script>
}




